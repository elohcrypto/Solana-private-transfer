{
    "name": "solana-confidential-wallet",
    "version": "0.2.0",
    "description": "Confidential token wallet with custom Bulletproof ZK proofs for Solana",
    "main": "dist/index.js",
    "bin": {
        "confidential-wallet": "./dist/cli/index.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "jest",
        "test:bulletproof": "npx ts-node scripts/test/test-bulletproof-comprehensive.ts",
        "test:bulletproof:demo": "npx ts-node scripts/test/test-bulletproof-demonstration.ts",
        "verify:offchain": "npx ts-node scripts/off-chain-verification-service.ts",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "audit": "npx ts-node scripts/security-audit.ts",
        "audit:security": "npx ts-node scripts/security-audit.ts"
    },
    "keywords": [
        "solana",
        "privacy",
        "zero-knowledge",
        "zk-proofs"
    ],
    "author": "elohcrypto",
    "license": "MIT",
    "dependencies": {
        "@coral-xyz/anchor": "^0.32.1",
        "@noble/curves": "^2.0.1",
        "@noble/hashes": "^2.0.1",
        "@solana/spl-token": "^0.4.14",
        "@solana/web3.js": "^1.87.6",
        "argon2": "^0.31.2",
        "bn.js": "^5.2.2",
        "commander": "^11.1.0",
        "crypto": "^1.0.1",
        "dotenv": "^16.3.1",
        "elliptic": "^6.6.1",
        "p-limit": "^5.0.0",
        "readline-sync": "^1.4.10",
        "tweetnacl": "^1.0.3",
        "uuid": "^9.0.1",
        "winston": "^3.18.3"
    },
    "devDependencies": {
        "@types/bn.js": "^5.2.0",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.6",
        "@types/readline-sync": "^1.4.8",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.2",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
